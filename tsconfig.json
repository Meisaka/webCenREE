{
	"compilerOptions": {
		"target": "ES2017",
		"lib": ["DOM", "ES2017", "ES2020"],
		"outDir": "js",
		"alwaysStrict": true,
		"strict": true,
		"newLine": "lf",
		"sourceMap": true,
		"module": "AMD",
		"types": ["offscreencanvas", "requirejs"],
		"moduleResolution": "node",
		"checkJs": false,
		"paths": {
			"vs/*": ["./node_modules/monaco-editor/min/vs/*"],
			"monaco-editor": ["./node_modules/monaco-editor/min/vs/editor/editor.main"]
		}
	},
	"exclude": ["js"],
	"include": ["src"]
}
